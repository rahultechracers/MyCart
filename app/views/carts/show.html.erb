<h1>Carts</h1><br>

<h3>Your cart contains</h3>

<table>
  <thead>
    <tr>
      <th>Product_id</th>
      <th> Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
<tbody>
  <% @items.each do |item|%>
    <tr>
      <%product = Product.find_by(id: item.product_id)%>
      <td><%=product.id%></td>
      <td><%=product.name%></td>
      <td><%=product.description%></td>
      <td><%=item.quantity%></td>
      <td><%=product.price%> </td>
    </tr>
  <%end%>
</tbody>

</table>

<h3> Total_amount : <%= @a %> </h3>
<%= link_to "Back to shopping" , products_path%>
<%= button_to 'checkout',new_order_path(price: @a), method: :get %> 
